                            </BoxView>
                            <BoxView Color="CadetBlue" WidthRequest="75" HeightRequest="75" >
                            </BoxView>
                        </StackLayout>
                    </ScrollView>
                    <StackLayout Orientation="Vertical" HeightRequest="100">
                        <BoxView Color="BurlyWood" WidthRequest="50" HeightRequest="50"  >
                        </BoxView>
                        <BoxView Color="CadetBlue" WidthRequest="50" HeightRequest="50" >
                        </BoxView>
                    </StackLayout>

                    <StackLayout Orientation="Vertical" HeightRequest="100">
                        <BoxView Color="Cyan" WidthRequest="50" HeightRequest="50"  >
                        </BoxView>
                        <BoxView Color="MediumVioletRed" WidthRequest="50" HeightRequest="50" >
                        </BoxView>
                    </StackLayout>
                    <ScrollView Orientation="Horizontal">
                        <StackLayout Padding="10" Orientation="Horizontal"  HeightRequest="100">
                            <BoxView Color="BurlyWood"  WidthRequest="75" HeightRequest="75">
                            </BoxView>
                            <BoxView Color="CadetBlue" WidthRequest="75" HeightRequest="75">
                            </BoxView>
                            <BoxView Color="BurlyWood" WidthRequest="75" HeightRequest="75">
