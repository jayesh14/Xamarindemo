                            <BoxView Color="BurlyWood" WidthRequest="75" HeightRequest="75"  >
                            </BoxView>
                            <BoxView Color="CadetBlue" WidthRequest="75" HeightRequest="75"  >
                            </BoxView>
                            <BoxView Color="BurlyWood" WidthRequest="75" HeightRequest="75"  >
                            </BoxView>
                            <BoxView Color="CadetBlue" WidthRequest="75" HeightRequest="75"  >
                            </BoxView>
                            <BoxView Color="BurlyWood" WidthRequest="75" HeightRequest="75"  >
                            </BoxView>
                            <BoxView Color="CadetBlue" WidthRequest="75" HeightRequest="75" >
                            </BoxView>
                        </StackLayout>
                    </ScrollView>
                </StackLayout>
            </ScrollView>
        </StackLayout>
        <StackLayout VerticalOptions="EndAndExpand" Spacing="0" Padding="0" BackgroundColor="AliceBlue">
            <StackLayout Orientation="Horizontal" HeightRequest="50" HorizontalOptions="FillAndExpand">
                <BoxView Color="BurlyWood"  HeightRequest="25" HorizontalOptions="FillAndExpand">
                </BoxView>
                <BoxView Color="CadetBlue" HeightRequest="25" HorizontalOptions="FillAndExpand">
                </BoxView>
            </StackLayout>
        </StackLayout>
    </StackLayout>
   

